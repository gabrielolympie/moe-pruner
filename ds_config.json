{
  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1
  },
  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    },
    "offload_param": {
      "device": "cpu",
      "pin_memory": true
    },
    "overlap_comm": true,
    "contiguous_gradients": true
  },
  "gradient_clipping": 1.0,
  "zero_allow_untested_optimizer": true,
  "optimizer": {
    "type": "AdEMAMix8bit",
    "params": {
      "lr": 0.0001,
      "weight_decay": 0.01
    }
  },
  "scheduler": {
    "type": "CosineAnnealingLR",
    "params": {
      "T_max": 2048,
      "eta_min": 1e-06
    }
  },
  "train_batch_size": 2
}